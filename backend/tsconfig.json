{
  "compilerOptions": {
    /* =========================
       Language & Environment
    ========================== */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* =========================
       Project Structure
    ========================== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* =========================
       Module Resolution
    ========================== */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* =========================
       Strict Type Checking
    ========================== */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* =========================
       Output & Debugging
    ========================== */
    "sourceMap": true,
    "declaration": false,

    /* =========================
       Performance
    ========================== */
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}